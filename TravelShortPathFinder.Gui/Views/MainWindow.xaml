<Window x:Class="TravelShortPathFinder.Gui.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="1000" Width="Auto" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Name="Image1"
               HorizontalAlignment="Left" VerticalAlignment="Top" Source="{Binding BitmapImage}"
               Stretch="Uniform"
               SnapsToDevicePixels="true" />
    </Grid>
</Window>